@model ProjectDto.MovieDto

@{
    ViewData["Title"] = "Movie Details";
}

<h2>Movie Details</h2>

<div class="card mb-3">
    <div class="row g-0">
        @if (!string.IsNullOrEmpty(Model.ImageMovie))
        {
            <div class="col-md-4">
                <img src="@Url.Content("~/FilmAppMVCImages/" + Model.ImageMovie)" class="img-fluid rounded-start" alt="@Model.MovieName">
            </div>
        }
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.MovieName</h5>
                <p class="card-text"><strong>Tür:</strong> @Model.MovieType</p>
                <p class="card-text"><strong>Film Açıklaması:</strong> @Model.MovieDescription</p>
                <p class="card-text"><strong>Yayın Tarihi:</strong> @Model.ReleaseDate.ToShortDateString()</p>
                <p class="card-text"><strong>İzlenme Durumu:</strong> @(Model.isWatch ? "İzlenmiş" : "İzlenmemiş")</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-controller="Movie" asp-action="Index">Back to Movies List</a>
</div>