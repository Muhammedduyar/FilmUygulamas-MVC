@model IEnumerable<ProjectDto.MovieDto> 

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>

@if (Model != null && Model.Any())
{
    <div class="list-group">
        @foreach (var movie in Model)
        {
            <div class="list-group-item list-group-item-action">
                <div class="d-flex w-100 align-items-center">
                    <!-- Film Fotoğrafı -->
                    @if (!string.IsNullOrEmpty(movie.ImageMovie))
                    {
                        <img src="@Url.Content("~/FilmAppMVCImages/" + movie.ImageMovie)" alt="@movie.MovieName" class="img-thumbnail" style="max-width: 150px; margin-right: 15px;" />
                    }

                    <div class="w-100">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@movie.MovieName</h5>
                            <small>@movie.ReleaseDate.ToShortDateString()</small>
                        </div>
                        <p class="mb-1">
                            <strong>Film Açıklaması:</strong> @movie.MovieDescription
                        </p>
                        <p class="mb-1">
                            <strong>Tür:</strong> @movie.MovieType
                        </p>
                        <a class="btn btn-primary" asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        No movies found matching your search criteria.
    </div>
}

<div class="mt-3">
    <a class="btn btn-secondary" asp-controller="Movie" asp-action="Index">Back to Movies List</a>
</div>
